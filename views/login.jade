extends layout
block content
    .row
        .col-md-6.col-md-offset-3
            .panel.panel-info
                .panel-heading
                    h3.panel-title Please sign in
                form(role='form', method='post', action='/login')
                    .panel-body
                        .form-group
                            input.form-control(type='email', name='email', placeholder='Email', autofocus='', required='')
                        .form-group
                            input.form-control(type='password', name='password', placeholder='Password', required='')
                    .panel-footer
                        p
                            button.btn.btn-default.center-block(type='submit') Submit
                        p.text-center
                            | You don't have an account yet? register
                            a(href='/register') here
            #loginError(hidden='hidden') {{ error }}