        link(rel='stylesheet', href='bower_components/smash/grid.css')
    body
        .container
            .header
                ul.nav.nav-pills.pull-right
                    li.active(class='{{#if isHomePage}} {{/if}}')
                        a(href='/', title='Go to home page')
                            i.fa.fa-home
                            |  Home
                    li.active(class='{{#if isPlayPage}} {{/if}}')
                        a(href='/play', title='Create a new game')
                            i.fa.fa-gamepad
                            |  Play
                    //li.active(class='{{#if isTvPage}} {{/if}}')
                        a(href='/tv', title='Watch live games')
                            i.fa.fa-eye
                            |  Tv
                    li.active(class='{{#if isSearchPage}} {{/if}}')
                        a(href='/search', title='Search a game')
                            i.fa.fa-search
                            |  Search
                    //li.active(class='{{#if isAccountPage}} {{/if}}')
                        a(href='/account', title='My account')
                            span#loggedUser(data-user='{{ user.name }}')
                            i.fa.fa-user
                            |  {{ user.name }}
                    //li
                        a(href='/logout', title='Sign out')
                            i.fa.fa-sign-out
                             //    {{else}}
                    li.active(class='{{#if isLoginPage}} {{/if}}')
                        a(href='/login')
                            i.fa.fa-sign-in
                            |  Sign in
                h3
                    i.fa.fa-group
                    |  SquareSmash
            //.content
            block content

            .footer
                p
                    | Â© SquareSmash 2016,
                    i.fa.fa-code
                    |  with
                    i.fa.fa-heart
                    |  by
                    a(target='_blank', href='https://in.linkedin.com/in/gopi-srinath-samudrala-8b064266') Gopi Srinath
                p

        // /container
