        link(rel='stylesheet', href='/bower_components/messenger/build/css/messenger-theme-future.css')
        
        link(rel='stylesheet', href='/stylesheets/squaresmash.css')
    body
        .container
            .header
                ul.nav.nav-pills.pull-right
                    li.active(class='{{#if isHomePage}} {{/if}}')
                        a(href='/', title='Go to home page')
                            i.fa.fa-home
                              Home
                    
                    li.active(class='{{#if isPlayPage}} {{/if}}')
                        a(href='/play', title='Create a new game')
                            i.fa.fa-gamepad
                              Play
                    
                    li.active(class='{{#if isTvPage}} {{/if}}')
                        a(href='/tv', title='Watch live games')
                            i.fa.fa-eye
                              Tv
                    
                    //li.active(class='{{#if isSearchPage}} {{/if}}')
