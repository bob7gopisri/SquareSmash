extends layout
block content
    head
        meta(charset='UTF-8')
        title Socket.IO Chat Example
        link(rel='stylesheet', href='/stylesheets/game_style.css')

    .row
    .col-md-6.col-md-offset-3
        .panel.panel-info
            .panel-heading
                h3.panel-title
                    i.fa.fa-edit
                    |  Create a new game
            form#newGameForm(action='/play', method='post')
                .panel-body
                    //.form-group
